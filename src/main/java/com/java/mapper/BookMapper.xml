<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.java.mapper.BookMapper">
    <insert id="add" parameterType="Book" >
            insert into books ( bookName ) values (#{name})
        </insert>

    <delete id="delete" parameterType="Book" >
            delete from books where id= #{id}
        </delete>

    <select id="get" parameterType="_int" resultType="Book">
            select * from   books  where id= #{id}
        </select>

    <update id="update" parameterType="Book" >
            update books set bookName=#{name} where id=#{id}
        </update>
    <select id="list" resultType="Book">
        select * from   books
    </select>
</mapper>